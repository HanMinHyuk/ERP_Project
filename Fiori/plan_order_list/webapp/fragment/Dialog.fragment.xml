                    </t:template>
                </t:Column>

                 <t:Column width="7rem">
                    <Label text="계획수량" class="bold" />
                    <t:template>
                        <Text text="{Pqua}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="7rem">
                    <Label text="현재재고" class="bold" />
                    <t:template>
                        <Text text="{HRtptqua}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="7rem">
                    <Label text="필요소요량" class="bold" />
