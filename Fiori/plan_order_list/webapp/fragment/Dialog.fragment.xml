                        <Text text="{Rqamt}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="7rem">
                    <Label text="단위" class="bold" />
                    <t:template>
                        <Text text="{Unit}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="7rem">
                    <Label text="희망구매요청일" class="bold" />
                    <t:template>
                        <Text text="{Matod}" wrapping="false" />
                    </t:template>
                </t:Column>

                <t:Column width="7rem">
                    <Label text="공정시작일" class="bold" />
                    <t:template>
                        <Text text="{Ppstr}" wrapping="false" />
                    </t:template>
                </t:Column>

            </t:columns>
        </t:Table>
        
        <beginButton>
            <Button text="닫기" press="onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>